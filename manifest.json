{
  "manifest_version": 3,
  "name": "Bolt.new Assistant",
  "version": "1.0.0",
  "description": "Chrome extension for bolt.new - read plans, input chat, and read code",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://bolt.new/*",
    "https://*.bolt.new/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bolt.new Assistant"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://bolt.new/*", "https://*.bolt.new/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}
